<Window x:Class="Uno_Game.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uno_Game"
        mc:Ignorable="d"
        Title="MainWindow" Height="612.176" Width="1762.388">
    <Grid x:Name="grdMainWindow" Margin="0,0,0,-2">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Teal" Offset="0"/>
                <GradientStop Color="CornflowerBlue" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image x:Name="imgMainPile" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="400,200,0,0" Width="80" Height="100"/>
        <Button x:Name="BtnNewGame" Content="New Game" HorizontalAlignment="Left" Margin="1512,173,0,0" VerticalAlignment="Top" Width="158" Height="49" Click="BtnNewGame_Click" RenderTransformOrigin="0.45,1.905"/>
        <Button x:Name="BtnClose" Content="Close" HorizontalAlignment="Left" Margin="1512,300,0,0" VerticalAlignment="Top" Width="158" Height="45" Click="BtnClose_Click"/>
        <Image x:Name="imgDeckPile" HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="566,200,0,0" Width="80" Height="100" Source="Resources/UnoDeck.png"/>
        <Button x:Name="DrawCardButton" Content="Draw Card" HorizontalAlignment="Left" Margin="566,233,0,0" VerticalAlignment="Top" Width="64" Height="38" Click="DrawCardButton_Click" Visibility="Hidden"/>
        <Button x:Name="NextPlayerButton" Content="Next Player" HorizontalAlignment="Left" Margin="780,233,0,0" VerticalAlignment="Top" Width="64" Height="38" Click="NextPlayerButton_Click" Visibility="Hidden"/>
    </Grid>
</Window>
